      <label for="signupstate" class="loginlabel">State:</label>
      <input type="text" name="signupstate" value=""><br><br>
      <label for="signupzip" class="loginlabel">Zip:</label>
      <input type="text" name="signupzip" value=""><br><br>
      <label for="signupcountry" class="loginlabel">Country:</label>
      <input type="text" name="signupcountry" value=""><br><br>
